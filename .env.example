# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="mongodb://localhost:27017/pokemon_battle_db"
# For PostgreSQL use: postgresql://username:password@localhost:5432/pokemon_battle_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# API Configuration
POKEAPI_BASE_URL=https://pokeapi.co/api/v2

# Cache Configuration
CACHE_TTL=300000
# TTL in milliseconds (300000ms = 5 minutes)

# Rate Limiting
RATE_LIMIT_WINDOW=3600000
# Window in milliseconds (3600000ms = 1 hour)
RATE_LIMIT_MAX_REQUESTS=100

# Test API Keys (for development only)
TEST_API_KEY_1=test-api-key-123-user1
TEST_API_KEY_2=test-api-key-456-user2
TEST_API_KEY_3=test-api-key-789-user3
